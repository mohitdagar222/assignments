<div class="container">
  <div class="py-2 text-center">
    
    <h2>Checkout form</h2>
  </div>

  <div class="row">
    <center>
    <div class="col-md-8 order-md-2">
      <h4 class="mb-3">Billing address</h4>

      <%= form_for @checkout_information, class: "needs-validation", html: {"data-turbo": false} do |f| %>
        <div class="row">
      
        <div class="col-md-6 mb-3">
            <label for="firstName">First name</label>
            <%= f.text_field :first_name, class: "form-control", placeholder: "First Name", required: true %>
            <div class="invalid-feedback">
              Valid first name is required.
            </div>
          </div>
      
          <div class="col-md-6 mb-3">
            <label for="lastName">Last name</label>
            <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name", required: true %>
            <div class="invalid-feedback">
              Valid last name is required.
            </div>
          </div>
        </div>

      

        <div class="mb-3">
          <label for="email">Email <span class="text-muted">(Optional)</span></label>
          <%= f.text_field :email, class: "form-control", placeholder: "Your Email" %>
          <div class="invalid-feedback">
            Please enter a valid email address for shipping updates.
          </div>
        </div>

        <div class="mb-3">
          <label for="address">Address</label>
          <%= f.text_field :address, class: "form-control", placeholder: "1234 Main St", required: true %>
          <div class="invalid-feedback">
            Please enter your shipping address.
          </div>
        </div>

        <div class="mb-3">
          <label for="address2">Address 2 <span class="text-muted">(Optional)</span></label>
          <%= f.text_field :address, class: "form-control", placeholder: "Apartment or Suite" %>
        </div>

        <div class="row">
          <div class="col-md-5 mb-3">
            <label for="country">Country</label>
            <%= f.select :country, options_for_select(['India']), {}, class:"custom-select form-control d-block w-100" %>
            <div class="invalid-feedback">
              Please select a valid country.
            </div>
          </div>
          <div class="col-md-4 mb-3">
            <label for="state">State</label>
            <%= f.select :state, options_for_select(['Delhi', 'Haryana', 'Uttar Pradesh', 'Punjab', 'Rajasthan', 'Maharashtra']), {}, class:"custom-select form-control d-block w-100" %>
            <div class="invalid-feedback">
              Please provide a valid state.
            </div>
          </div>
          <div class="col-md-3 mb-3">
            <label for="zip">Pin Code</label>
            <%= f.text_field :pin_code, class: "form-control", placeholder: "Pin Code", required: true %>
            <div class="invalid-feedback">
              Zip code required.
            </div>
          </div>
        </div>
        <hr class="mb-4">
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="same-address">
          <label class="custom-control-label" for="same-address">Shipping address is the same as my billing address</label>
        </div>
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="save-info">
          <label class="custom-control-label" for="save-info">Save this information for next time</label>
        </div>
        <hr class="mb-4">
        <%= f.submit "Continue to Checkout", :class => "btn btn-primary btn-lg btn-block" %>
      <% end %>
    </div>
    </center>
  </div>

  <footer class="my-5 pt-5 text-muted text-center text-small">
    <p class="mb-1">Â© 2021 - 2045 Company Name</p>
    <ul class="list-inline">
      <li class="list-inline-item"><a href="#">Privacy</a></li>
      <li class="list-inline-item"><a href="#">Terms</a></li>
      <li class="list-inline-item"><a href="#">Support</a></li>
    </ul>
  </footer>
</div>